<!--Profile Information-->

<!DOCTYPE html>
<html>
  <head>
    <title>Information</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <style>
      img {
        border-radius: 50%;
      }
    </style>
  </head>
  <body>
    <div class="container mt-4">
      <div class="row">
        <div class="col-6 border border-primary">
          <img
            src="<%= user.photos[0].value %>"
            width="150"
            height="150"
            class="mt-3 me-3 ms-3"
          />
          <p class="mt-4 mb-3 me-3 ms-3">
            Hello <%= user.displayName %> <a href="/logout">Sign out</a
            ><br />You are signed in with the email <%= user.emails[0].value %>
          </p>
          <p class="me-3 ms-3">Login Date: <span id="date"></span></p>
          <p class="me-3 ms-3">Login Time: <span id="time"></span></p>
        </div>
      </div>
    </div>

    <script>
      var date = new Date();
      document.getElementById("date").innerHTML = date.toLocaleDateString();
      document.getElementById("time").innerHTML = date.toLocaleTimeString();
    </script>
  </body>
</html>
